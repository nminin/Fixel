<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fixel" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="shapeAppearanceSmallComponent">@style/Button</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="textAppearanceBody1">@style/BebasNeue</item>
        <item name="textAppearanceBody2">@style/BebasNeue</item>
        <item name="textAppearanceButton">@style/BebasNeue</item>
        <item name="textAppearanceHeadline1">@style/BebasNeue</item>
        <item name="android:textViewStyle">@style/TextView</item>
    </style>

    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_bebas_neue_bold</item>
    </style>

    <style name="TextViewMontserratBold" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_montserrat_bold</item>
    </style>
    <style name="TextViewMontserratRegular" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_montserrat_regular</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ButtonShape</item>
    </style>

    <style name="BebasNeue" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/font_bebas_neue_bold</item>
    </style>

    <style name="ButtonShape" parent="TextAppearance.MaterialComponents.Button">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>